#!/usr/bin/env php
<?php

  require __DIR__.'/../vendor/autoload.php';

  use ActiveCollab\Narrative\Command;
  use Symfony\Component\Console\Application;

  $application = new Application('Narrative', \ActiveCollab\Narrative::VERSION);
  $application->add(new Command\BuildCommand());
  $application->add(new Command\InitCommand());
  $application->add(new Command\RoutesCommand());
  $application->add(new Command\StoriesCommand());
  $application->add(new Command\StoryCommand());
  $application->add(new Command\TestCommand());
  $application->add(new Command\UpdateCommand());
  $application->run();