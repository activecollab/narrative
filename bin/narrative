#!/usr/bin/env php
<?php

  require __DIR__.'/../vendor/autoload.php';

  use ActiveCollab\Narrative\Command;
  use Symfony\Component\Console\Application;

  $application = new Application('Narrative', '0.1-dev');
  $application->add(new Command\InitCommand());
  $application->add(new Command\StoriesCommand());
  $application->add(new Command\StoryCommand());
  $application->add(new Command\TestCommand());
  $application->add(new Command\TestStoryCommand());
  $application->add(new Command\TellStoryCommand());
  $application->run();